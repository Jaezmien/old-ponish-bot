// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

// ---

model WordOfTheDay {
    id String @id @unique @default(cuid())

    author  String
    message String

    word String
}

// ---

model Setting {
    name  String @id @unique
    value String
}
